# set my_gruvbox_orange = $my_gruvbox_faded_orange

# basic colors ---------------------------------------------------------
mono normal normal
mono bold bold
mono underline underline
mono error bold
mono indicator reverse

color normal $my_gruvbox_fg $my_gruvbox_bg
color bold $my_gruvbox_fg0 $my_gruvbox_bg
color underline $my_gruvbox_fg $my_gruvbox_bg
color error $my_gruvbox_bg $my_gruvbox_red
color indicator $my_gruvbox_bg $my_gruvbox_yellow
color tilde $my_gruvbox_fg $my_gruvbox_bg
color message $my_gruvbox_aqua $my_gruvbox_bg
color markers $my_gruvbox_bg3 $my_gruvbox_bg
color attachment $my_gruvbox_fg $my_gruvbox_bg
color search $my_gruvbox_purple $my_gruvbox_bg
color status $my_gruvbox_fg4 $my_gruvbox_bg1
color tree $my_gruvbox_yellow $my_gruvbox_bg  # arrow in threads

# index ----------------------------------------------------------------

color index $my_gruvbox_fg4 $my_gruvbox_bg "~A"  # all messages
color index $my_gruvbox_bg2 $my_gruvbox_bg "~E"  # expired messages
color index $my_gruvbox_blue $my_gruvbox_bg "~N"  # new messages
color index $my_gruvbox_yellow $my_gruvbox_bg "~O"  # old messages
color index $my_gruvbox_aqua $my_gruvbox_bg "~Q"  # messages that have been replied to
color index $my_gruvbox_bg4 $my_gruvbox_bg "~R"  # read messages
color index $my_gruvbox_green $my_gruvbox_bg "~U"  # unread messages
color index $my_gruvbox_fg $my_gruvbox_bg "~P"  # messages from me
color index $my_gruvbox_green $my_gruvbox_bg "~p!~F"  # messages to me
color index $my_gruvbox_green $my_gruvbox_bg "~N~p!~F"  # new messages to me
color index $my_gruvbox_green $my_gruvbox_bg "~U~p!~F"  # unread messages to me
color index $my_gruvbox_fg4 $my_gruvbox_bg "~R~p!~F"  # messages to me
color index $my_gruvbox_red $my_gruvbox_bg  "~F"  # flagged messages
color index $my_gruvbox_fg $my_gruvbox_bg "~v"  # messages part of a collapsed thread
color index color245 $my_gruvbox_bg "~v~(!~N)"  # collapsed thread with no unread
color index color136 $my_gruvbox_bg "~v~(~N)"  # collapsed thread with some unread
color index color64  $my_gruvbox_bg "~N~v~(~N)"   # collapsed thread with unread parent
color index  color160 color235 "~v~(~F)!~N"  # collapsed thread with flagged, no unread
color index  color136 color235 "~v~(~F~N)"  # collapsed thread with some unread & flagged
color index  color64 color235 "~N~v~(~F~N)"  # collapsed thread with unread parent & flagged
color index  color64 color235 "~N~v~(~F)"  # collapsed thread with unread parent, no unread inside, but some flagged
color index  color37 color235 "~v~(~p)"  # collapsed thread with unread parent, no unread inside, some to me directly
color index  color136 color160  "~v~(~D)"  # thread with deleted (doesn't differentiate between all or partial)
color index  color136 $my_gruvbox_bg "~(~N)"  # messages in threads with some unread
color index  color64 $my_gruvbox_bg "~S"  # superseded messages
color index $my_gruvbox_fg $my_gruvbox_bg2 "~="  # duplicated messages
color index $my_gruvbox_orange $my_gruvbox_bg "~T"  # tagged messages
color index $my_gruvbox_bg $my_gruvbox_red "~D"  # deleted messages

# message headers ------------------------------------------------------

color hdrdefault $my_gruvbox_gray $my_gruvbox_bg
color header $my_gruvbox_blue $my_gruvbox_bg "^((X-Local-)?Date)"
color header $my_gruvbox_neutral_yellow $my_gruvbox_bg "^(From)"
color header $my_gruvbox_green $my_gruvbox_bg "^(Subject)"
color header $my_gruvbox_fg4 $my_gruvbox_bg "^(To)"
color header $my_gruvbox_bg4 $my_gruvbox_bg "^(CC)"
color header $my_gruvbox_bg3 $my_gruvbox_bg "^(BCC)"

# body -----------------------------------------------------------------

color quoted $my_gruvbox_gray $my_gruvbox_bg
color quoted1 $my_gruvbox_blue $my_gruvbox_bg
color quoted2 $my_gruvbox_gray $my_gruvbox_bg
color quoted3 $my_gruvbox_blue $my_gruvbox_bg
color quoted4 $my_gruvbox_gray $my_gruvbox_bg

color signature $my_gruvbox_aqua $my_gruvbox_bg

# emotes
color body $my_gruvbox_blue $my_gruvbox_bg "[;:][-o][)/(|]"
color body $my_gruvbox_blue $my_gruvbox_bg "[;:][)(|]"

## pgp
mono body bold "^gpg: Good signature"
mono body bold "^gpg: BAD signature from.*"
color body $my_gruvbox_green $my_gruvbox_bg "(Good signature)"
color body $my_gruvbox_red $my_gruvbox_bg "(BAD signature)"
color body $my_gruvbox_gray $my_gruvbox_bg "^gpg: "
color body $my_gruvbox_green $my_gruvbox_bg "^gpg: Good signature .*"
color body $my_gruvbox_red $my_gruvbox_bg "^gpg: BAD signature from.*"

## URLs and emails
color body $my_gruvbox_orange $my_gruvbox_bg "[\-\.+_a-zA-Z0-9]+@[\-\.a-zA-Z0-9]+"  # email addresses
color body $my_gruvbox_green $my_gruvbox_bg "[a-z]+://[\-\.,/%~_:?&=\#a-zA-Z0-9]+"  # URLs

# remove terminal color aliases
# shared colours
unset my_gruvbox_neutral_red
unset my_gruvbox_neutral_green
unset my_gruvbox_neutral_yellow
