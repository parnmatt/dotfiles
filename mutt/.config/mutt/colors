# assuming gruvbox colors
#
# decare (all) terminal color aliases
# shared colours
set my_gruvbox_neutral_red = color124
set my_gruvbox_neutral_green = color106
set my_gruvbox_neutral_yellow = color172
set my_gruvbox_neutral_blue = color66
set my_gruvbox_neutral_purple = color132
set my_gruvbox_neutral_aqua = color72
set my_gruvbox_neutral_orange = color166
set my_gruvbox_bright_gray = color245
set my_gruvbox_faded_gray = color244

set my_gruvbox_bg0_dark = color235
set my_gruvbox_fg0_light = color235
set my_gruvbox_bg1_dark = color237
set my_gruvbox_fg1_light = color237
set my_gruvbox_bg2_dark = color239
set my_gruvbox_fg2_light = color239
set my_gruvbox_bg3_dark = color241
set my_gruvbox_fg3_light = color241
set my_gruvbox_bg4_dark = color243
set my_gruvbox_fg4_light = color243

set my_gruvbox_fg0_dark = color229
set my_gruvbox_bg0_light = color229
set my_gruvbox_fg1_dark = color223
set my_gruvbox_bg1_light = color223
set my_gruvbox_fg2_dark = color250
set my_gruvbox_bg2_light = color250
set my_gruvbox_fg3_dark = color248
set my_gruvbox_bg3_light = color248
set my_gruvbox_fg4_dark = color246
set my_gruvbox_bg4_light = color246

# dark theme
set my_gruvbox_bg_dark = color235
set my_gruvbox_bg0_h_dark = color234
set my_gruvbox_bg0_s_dark = color236
set my_gruvbox_fg_dark = color223
set my_gruvbox_neutral_gray_dark = color246
set my_gruvbox_bright_red = color167
set my_gruvbox_bright_green = color142
set my_gruvbox_bright_yellow = color214
set my_gruvbox_bright_blue = color109
set my_gruvbox_bright_purple = color175
set my_gruvbox_bright_aqua = color108
set my_gruvbox_bright_orange = color208

# light theme
set my_gruvbox_bg_light = color229
set my_gruvbox_bg0_h_light = color230
set my_gruvbox_bg0_s_light = color228
set my_gruvbox_fg_light = color237
set my_gruvbox_neutral_gray_light = color243
set my_gruvbox_faded_red = color88
set my_gruvbox_faded_green = color100
set my_gruvbox_faded_yellow = color136
set my_gruvbox_faded_blue = color24
set my_gruvbox_faded_purple = color96
set my_gruvbox_faded_aqua = color66
set my_gruvbox_faded_orange = color130

# set theme
# TODO: figure out how to do this dynamically
#   would be nice to have '[dark]/light' and option for '[normal]/hard/soft'
#   for now just toggle the comment:
## dark
set my_gruvbox_bg = $my_gruvbox_bg_dark
set my_gruvbox_bg0_h = $my_gruvbox_bg0_h_dark
set my_gruvbox_bg0_s = $my_gruvbox_bg0_s_dark
set my_gruvbox_bg0 = $my_gruvbox_bg0_dark
set my_gruvbox_bg1 = $my_gruvbox_bg1_dark
set my_gruvbox_bg2 = $my_gruvbox_bg2_dark
set my_gruvbox_bg3 = $my_gruvbox_bg3_dark
set my_gruvbox_bg4 = $my_gruvbox_bg4_dark
set my_gruvbox_fg = $my_gruvbox_fg_dark
set my_gruvbox_fg0 = $my_gruvbox_fg0_dark
set my_gruvbox_fg1 = $my_gruvbox_fg1_dark
set my_gruvbox_fg2 = $my_gruvbox_fg2_dark
set my_gruvbox_fg3 = $my_gruvbox_fg3_dark
set my_gruvbox_fg4 = $my_gruvbox_fg4_dark
set my_gruvbox_neutral_gray = $my_gruvbox_neutral_gray_dark
set my_gruvbox_gray = $my_gruvbox_bright_gray
set my_gruvbox_red = $my_gruvbox_bright_red
set my_gruvbox_green = $my_gruvbox_bright_green
set my_gruvbox_yellow = $my_gruvbox_bright_yellow
set my_gruvbox_blue = $my_gruvbox_bright_blue
set my_gruvbox_purple = $my_gruvbox_bright_purple
set my_gruvbox_aqua = $my_gruvbox_bright_aqua
set my_gruvbox_orange = $my_gruvbox_bright_orange

