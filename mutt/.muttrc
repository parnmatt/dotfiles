# Personal Details
set realname = "Matthew Parnell"
set from     = "m.parnell@lancaster.ac.uk"
set envelope_from

# Account Details
source "gpg2 -dq ~/.mutt_login.gpg |"
set imap_user = $my_user
set imap_pass = $my_pass
set smtp_url  = "smtp://$imap_user@smtp.office365.com:587"
set smtp_pass = $imap_pass
set folder    = "imaps://outlook.office365.com:993"
set ssl_force_tls
set ssl_starttls

# Mailboxes
set spoolfile = "=INBOX"
set record    = "=Sent Items"
set postponed = "=Drafts"
mailboxes     = "=INBOX"

# No timeout
unset imap_passive
set imap_keepalive = 180
set imap_idle
set timeout = 0
set mail_check = 120

# Cache
set header_cache = ~/.cache/mutt

# Aliases
alias me Matthew Parnell <m.parnell@lancaster.ac.uk>
source "gpg2 -dq ~/.mutt_aliases.gpg |"

# Mailing Lists
source "gpg2 -dq ~/.mutt_lists.gpg |"
set followup_to
set honor_followup_to = yes

# Message options
set editor = "vim -f"

# Message viewing
alternative_order text/plain text/html
auto_view text/html
set sort = "threads"
set strict_threads = "yes"
bind index - collapse-thread
bind index _ collapse-all

# Vim keybindings
# Generic
bind generic h select-entry
# Index
bind index h change-folder
bind index l display-message
# Pager
bind pager h exit
bind pager j next-line
bind pager k previous-line
bind pager l view-attachments
bind pager i display-toggle-weed
# Attach
bind attach h exit
bind attach l view-attach
# Compose
bind compose l view-attach
