# user configuration file for msmtp

defaults
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

# Lancaster University Mail
account lancs
host smtp.office365.com
protocol smtp
port 587
from m.parnell@lancaster.ac.uk
user parnellm@live.lancs.ac.uk
passwordeval pass show lancs

account default : lancs
